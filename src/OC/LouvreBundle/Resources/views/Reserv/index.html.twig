{% extends "::layout.html.twig" %}

{% block corps %}

	<div id="colonneGauche" class="col-md-7 col-xs-12">
				
		<div id="blocReserv" class="col-xs-12">	
			<p id="textChoix">Choisissez votre date :</p>
						
			<div class="input-group date" id="reservDate" data-provide="datepicker">
		    	<input type="text" class="form-control">
		    		<div class="input-group-addon">
		        		<span class="glyphicon glyphicon-th"></span>
		    		</div>
	    	</div>
	    </div>
				
		<div id="indicJour" class="col-xs-12">
			<p id="indicVisite">Visite du musée le</p>
			<p id="indicBillets">billets disponibles</p>
		</div>

		<div id="blocBillets" class="col-xs-12">
		</div>
	</div>

	<div id="tarisEtHoraires" class="col-md-4 col-md-offset-1 col-xs-12">
		<div id="tarifs" class="col-xs-12 text-center">
			<h4>Nos tarifs</h4>
			<hr>
			<p>Entrée gratuite pour les enfants de moins de 4 ans.</p>
			<p>Tarif normal : 12€</p>
			<p>Tarif enfant (4 à 12 ans) : 4€</p>
			<p>Tarif sénior (à partir de 60 ans) : 8€</p>
			<p>Tarif réduit (sous conditions) : 10€</p>
		</div>

		<div id="horaires" class="col-xs-12 text-center">
			<h4>Nos horaires</h4>
			<hr>
			<p>Lundi : 09:00 - 18:00</p>
			<p>Mercredi : 09:00 - 22:00</p>
			<p>Jeudi : 09:00 - 18:00</p>
			<p>Vendredi : 09:00 - 22:00</p>
			<p>Samedi : 09:00 - 18:00</p>
		</div>

		<div id="billetsAide" class="col-xs-12 text-center">	
			<a href="#">Quand et comment réserver mes billets ?</a>
		</div>
	</div>
{% endblock %}